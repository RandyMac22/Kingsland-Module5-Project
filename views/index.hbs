<body>
    <div>
        <aside>
            <div class="center">
                <img class="logo" src="../static/img/KingslandLogo.jpeg" alt="logo">
            </div>

            <nav>
                {{#if loggedIn}}
                <a href="/">Main Page</a>
                <a href="/all-articles">All Articles</a>
                <form>
                    <input type="text">
                    <input type="submit" value="Search">
                </form>
                <a href="/create">Create New Article</a>
                {{else}}
                <a href="/">Main Page</a>
                <a href="/all-articles">All Articles</a>
                <form>
                    <input type="text">
                    <input type="submit" value="Search">
                </form>
                {{/if}}
            </nav>
        </aside>
        <div id="container">
            <header>
                {{#if loggedIn}}
                <span>Welcome, {{firstName}}!</span>
                <a href="#">[Logout]</a>
                {{else}}
                <a href="/login">Login</a>
                <a href="/register">Register</a>
                {{/if}}
            </header>
            <main>
                <h1>Welcome to KingUni Wiki!</h1>
                <section id="featured">
                    <h2>Latests articles</h2>
                    {{#each article}}
                    <article>
                        <h3>{{title}}</h3>
                        <p>
                            {{description}}&hellip;
                        </p>
                        <div class="controls">
                            <a href="/article/:id">Read more</a>
                        </div>
                    </article>
                    {{else}}
                    <br>
                    <br>
                    <h1>NO ARTICLES FOUND</h1>
                    {{/each}}
                </section>
            </main>
            <footer>
                KingUni Wiki &copy; 2020
            </footer>
        </div>
    </div>
</body>