<body>
    <div>
        <aside>
            <div class="center">
                <img class="logo" src="../static/img/KingslandLogo.jpeg" alt="logo">
            </div>

            <nav>
                {{#if loggedIn}}
                <a href="/">Main Page</a>
                <a href="/all-articles">All Articles</a>
                <form>
                    <input type="text">
                    <input type="submit" value="Search">
                </form>
                <a href="/create">Create New Article</a>
                {{else}}
                <a href="/">Main Page</a>
                <a href="/all-articles">All Articles</a>
                <form>
                    <input type="text">
                    <input type="submit" value="Search">
                </form>
                {{/if}}
            </nav>
        </aside>
        <div id="container">
            <header>
                {{#if loggedIn}}
                <span>Welcome, Bob!</span>
                <a href="#">[Logout]</a>
                {{else}}
                <a href="/login">Login</a>
                <a href="/register">Register</a>
                {{/if}}
            </header>
            <main>
                <h1>Welcome to KingUni Wiki!</h1>
				<section id="notifications">
				<p>Article description should be at least 20 characters long...</p>
				</section>
                <section>
                    <h2>Create new article</h2>
                    <div class="spacer">
                        <form action="/create" method="POST">
                            <label>Article title</label>
                            <input type="text" class="title" name="title">
                            <label>Content</label>
                            <textarea name="description"></textarea>
                            <input type="submit" value="Submit">
                        </form>
                    </div>
                </section>
            </main>
            <footer>
                KingUni Wiki &copy; 2020
            </footer>
        </div>
    </div>
</body>