<body>
    <div>
        <aside>
            <div class="center">
                <img class="logo" src="../static/img/KingslandLogo.jpeg" alt="logo">
            </div>

            <nav>
                {{#if loggedIn}}
                <a href="/">Main Page</a>
                <a href="/all-articles">All Articles</a>
                <form>
                    <input type="text">
                    <input type="submit" value="Search">
                </form>
                <a href="/create">Create New Article</a>
                {{else}}
                <a href="/">Main Page</a>
                <a href="/all-articles">All Articles</a>
                <form>
                    <input type="text">
                    <input type="submit" value="Search">
                </form>
                {{/if}}
            </nav>
        </aside>
        <div id="container">
            <header>
                {{#if loggedIn}}
                <span>Welcome, Bob!</span>
                <a href="#">[Logout]</a>
                {{else}}
                <a href="/login">Login</a>
                <a href="/register">Register</a>
                {{/if}}
            </header>
            <main>
                <h1>Welcome to KingUni Wiki!</h1>
				<section id="notifications">
				<p>Both passwords should be the same...</p>
				</section>
                <section>
                    <h2>Register</h2>
                    <div class="spacer">
                        <form>
                            <label>Username:</label>
                            <input type="text">
                            <label>Password:</label>
                            <input type="password">
                            <label>Repeat password:</label>
                            <input type="password">
                            <label>First Name:</label>
                            <input type="text"> 
                            <input type="submit" value="Register">
                        </form>
                    </div>
                </section>
            </main>
            <footer>
                KingUni Wiki &copy; 2020
            </footer>
        </div>
    </div>
</body>